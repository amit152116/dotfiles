[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	pager = git-pager
[init]
	defaultBranch = master
[http]
	postBuffer = 524288000
[alias]
	logs = log --oneline --decorate --date=iso
	home = "!f() { cd \"$(git rev-parse --show-toplevel)\"; }; f"
	filelog = log --oneline --follow
  	tags = tag -l --sort=-creatordate
	amend = commit --amend --no-edit
	pick = cherry-pick
	unstage = reset HEAD --
	undo = reset --soft HEAD^
	undo2 = reset --soft HEAD~2
	undo3 = reset --soft HEAD~3
	undo4 = reset --soft HEAD~4
	undo5 = reset --soft HEAD~5
	porcelain = status --porcelain	
  	tag-delete = "!f() { \
    	if [ \"$#\" -eq 0 ]; then echo 'Usage: git tag-delete <tag1> [tag2 ...]'; exit 1; fi; \
    	echo \"This will delete the following tags locally and remotely: $@\"; \
    	read -p \"Are you sure? [y/N] \" confirm; \
    	if [ \"$confirm\" != \"y\" ] && [ \"$confirm\" != \"Y\" ]; then echo \"Aborted.\"; exit 1; fi; \
    	for tag in \"$@\"; do \
      	echo \"Deleting tag $tag...\"; \
      	git tag -d \"$tag\" && git push origin --delete \"$tag\"; \
    	done; \
  	}; f"
	tag-add = "!f() { \
    	if [ \"$#\" -lt 1 ]; then echo 'Usage: git tag-add <tag>'; exit 1; fi; \
    	git tag \"$1\" && git push origin \"$1\"; \
  	}; f"
	save = !git stash push --include-untracked --message \"Auto-Backup $(date \"+%Y-%m-%d %H:%M:%S\")\" && git stash apply stash@{0}

	setup-bare = "!f() { git config remote.origin.fetch '+refs/heads/*:refs/remotes/origin/*' && git fetch origin; }; f"

[diff]
	tool = nvimdiff

[rebase]
	autoStash = true

[interactive]
    diffFilter = delta --color-only

[delta]
	side-by-side = true
   	line-numbers = true
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection

[merge]
    conflictStyle = diff3
[color]
	ui = auto
